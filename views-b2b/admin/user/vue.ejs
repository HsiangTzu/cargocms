<fieldset>
  <section>
    <label class="label"><span class="text-danger">*</span>必填欄位</label>
  </section>
  <section>
    <label class="label"><span class="text-danger">*</span>權限</label>
    <label class="checkbox state-disabled">
      <input type="checkbox" id="admin" name="admin" value="admin" v-model="data.item.rolesArray" @chick="addRoles">
      <i></i>管理員</label>
    <label class="checkbox state-disabled">
      <input type="checkbox" id="supplier" name="supplier" value="supplier" v-model="data.item.rolesArray" @chick="addRoles">
      <i></i>供應商</label>
    <label class="user checkbox state-disabled">
      <input type="checkbox" id="user" name="user" value="user" v-model="data.item.rolesArray" checked disabled @chick="addRoles">
      <i></i>使用者</label>
  </section>

  <br>
  <hr>
  <br>

  <section>
    <label class="label">供應商角色</label>
    <label class="select">
      <select v-model="data.item.Supplier.id" name="supplier">
        <option value="" selected>無</option>
        <option v-for="supplier in data.option.supplierList" v-bind:value="supplier.id">
          {{ supplier.name }}
        </option>
      </select> <i></i>
    </label>
  </section>

  <section>
    <label class="label"><span class="text-danger">*</span>使用者帳號</label>
    <label class="input state-disabled"><i class="icon-append fa fa-user"></i>
      <input type="text" name="username" placeholder="" v-model="data.item.username" disabled>
      <b class="tooltip tooltip-bottom-right">請輸入使用者帳號</b></label>
  </section>

  <section>
    <label class="label"><span class="text-danger">*</span>Email</label>
    <label class="input state-disabled"><i class="icon-append fa fa-envelope-o"></i>
      <input type="email" name="email" placeholder="" v-model="data.item.email" disabled>
      <b class="tooltip tooltip-bottom-right">請輸入 Email</b></label>
  </section>

  <div class="row">
    <section class="col col-6">
      <label class="label"><span class="text-danger">*</span>姓氏</label>
      <label class="input">
        <input type="text" name="lastName" placeholder="" v-model="data.item.lastName" disabled>
      </label>
    </section>

    <section class="col col-xs-12 col-sm-6">
      <label class="label"><span class="text-danger">*</span>名字</label>
      <label class="input state-disabled">
        <input type="text" name="firstName" placeholder="" v-model="data.item.firstName" disabled>
      </label>
    </section>
  </div>

  <div class="row">
    <section class="col col-xs-12 col-sm-6">
      <label class="label"><span class="text-danger">*</span>密碼</label>
      <label class="input state-disabled"> <i class="icon-append fa fa-lock"></i>
        <input type="password" name="password" placeholder="" id="password" v-model="data.item.Passports[0].password" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入密碼</b> </label>
    </section>

    <section class="col col-xs-12 col-sm-6">
      <label class="label"><span class="text-danger">*</span>確認密碼</label>
      <label class="input state-disabled"> <i class="icon-append fa fa-lock"></i>
        <input type="password" name="passwordConfirm" placeholder="" v-model="data.option.passwordConfirm" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入密碼</b> </label>
    </section>
  </div>

  <div class="row">
    <section class="col col-xs-12">
      <label class="input state-disabled"><i class="icon-append fa fa-birthday-cake"></i>
        <input type="date" name="birthday" placeholder="請輸入生日 例：1970-01-01" v-model="data.item.birthday" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入 生日</b></label>
    </section>
    <section class="col col-xs-12">
      <label class="input state-disabled"><i class="icon-append fa fa-phone"></i>
        <input type="number" name="phone1" placeholder="請輸入手機號碼" v-model="data.item.phone1" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入 手機號碼</b></label>
    </section>
    <section class="col col-xs-12">
      <label class="input state-disabled"><i class="icon-append fa fa-phone"></i>
        <input type="number" name="phone2" placeholder="請輸入市話號碼" v-model="data.item.phone2" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入 市話號碼</b></label>
    </section>

    <section class="col col-xs-12">
      <div class="hidden">
        <input type="text" name="city" placeholder="" v-model="data.item.city" disabled>
        <input type="text" name="district" placeholder="" v-model="data.item.district" disabled>
        <input type="text" name="postCode" placeholder="" v-model="data.item.postCode" disabled>
      </div>

      <div class="row" id="twzipcode">
        <div class="col col-xs-4" data-role="county" data-name="userCity"></div>
        <div class="col col-xs-4" data-role="district" data-name="userDistrict"></div>
        <div class="col col-xs-4" data-role="zipcode" data-name="userPostCode"></div>
      </div>
    </section>

    <section class="col col-xs-12">
      <label class="input state-disabled"><i class="icon-append fa fa-map-marker"></i>
        <input type="text" name="address" placeholder="請輸入收件地址" v-model="data.item.address" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入 收件地址</b></label>
    </section>

    <section class="col col-xs-12">
      <label class="input state-disabled"><i class="icon-append fa fa-map-marker"></i>
        <input type="text" name="address2" placeholder="請輸入收件地址2" v-model="data.item.address2" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入 收件地址2</b></label>
    </section>

  </div>
