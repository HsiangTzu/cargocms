    required: "請給予名字"
  },
  lastname: {
    required: "請給予姓氏"
  },
  email: {
    required: "請給予電子郵件"
  },
  telephone: {
    required: "請給予電話"
  },
  fax: {
    required: "請給予傳真號碼"
  },
  total: {
    required: "請給予總數"
  },
  tracking: {
    required: "請給予追蹤代碼"
  },
}
</script>
