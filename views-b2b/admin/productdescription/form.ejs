<style>
.spinner {
  width: 200px;
  height: 200px;
  background-color: #666;

  margin: 100px auto;
  -webkit-animation: sk-rotateplane 1.2s infinite ease-in-out;
  animation: sk-rotateplane 1.2s infinite ease-in-out;
}

@-webkit-keyframes sk-rotateplane {
  0% { -webkit-transform: perspective(600px) }
  50% { -webkit-transform: perspective(600px) rotateY(180deg) }
  100% { -webkit-transform: perspective(600px) rotateY(180deg)  rotateX(180deg) }
}

@keyframes sk-rotateplane {
  0% { 
    transform: perspective(600px) rotateX(0deg) rotateY(0deg);
    -webkit-transform: perspective(600px) rotateX(0deg) rotateY(0deg) 
  } 50% { 
    transform: perspective(600px) rotateX(-180.1deg) rotateY(0deg);
    -webkit-transform: perspective(600px) rotateX(-180.1deg) rotateY(0deg) 
  } 100% { 
    transform: perspective(600px) rotateX(-180deg) rotateY(-179.9deg);
    -webkit-transform: perspective(600px) rotateX(-180deg) rotateY(-179.9deg);
  }
}
</style>

