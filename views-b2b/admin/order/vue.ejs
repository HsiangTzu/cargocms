appMain.orderProductList = function(){
  var orderProductList = {};
  for ( var key in appMain.data.item.OrderProducts ) {
    var orderProduct = appMain.data.item.OrderProducts[key];
    var supplier = orderProduct.Product.Supplier.name;

    if (! Array.isArray(orderProductList[supplier])) {
      orderProductList[supplier] = [];
    }
    orderProductList[supplier].push(orderProduct);
  }
  appMain.data.option.orderProductList = orderProductList;
}

