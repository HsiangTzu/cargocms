<style>
  .shareSticker {
    max-width: 360px;
    padding-top: 10px;
  }
  .rrssb-buttons a {
    -webkit-filter: saturate(0.5);
    -moz-filter: saturate(0.5);
    -ms-filter: saturate(0.5);
    -o-filter: saturate(0.5);
    filter: saturate(0.5);
  }
  .rrssb-buttons a:hover {
    -webkit-filter: saturate(1);
    -moz-filter: saturate(1);
    -ms-filter: saturate(1);
    -o-filter: saturate(1);
    filter: saturate(1);
  }
  .news-v3 h2 a {
    color: #555;
  }
  .bg-color-white {
      background-color: #fff !important;
  }
  .bg-color-white {
      color: #555;
  }
  .margin-bottom-60 {
      margin-bottom: 60px;
  }
  .news-v3 .news-v3-in {
    padding: 35px 30px;
  }
  .blog-title {
    font-family: 'Noto Sans TC', sans-serif;
    font-weight: 500;
  }
  .blog-content {
    font-family: 'Noto Sans TC', sans-serif;
    font-weight: 300;
    font-size: 15px;
    line-height: 150%;
    text-rendering: optimizeLegibility;
  }
</style>
<% data.items.forEach(function(post, index){ %>
  <div class="news-v3 bg-color-white margin-bottom-60">
    <% if (post.coverUrl) { %>
      <% if (post.coverType == 'img') { %>
        <img class="img-responsive full-width" src="<%= post.coverUrl %>" alt="" onerror="this.src='/assets/labfnp/img/blog_event_default_cover.jpg';">
      <% } else{ %>
        <div class="responsive-video">
          <iframe src="<%= post.coverUrl %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>
      <% } %>
    <% } %>

    <div class="news-v3-in">

      <div class="blog-title">
        <h2>
          <a href="/questions/<%= post.alias || post.id %>" <%= post.type == 'external-event' ? 'target="_blank"' : '' %> ><%= post.title %></a>
        </h2>
      </div>

      <div class="blog-content">
        <p><%= post.abstract %></p>
      </div>

      <div class="margin-bottom-20">
        <% post.TagsArray.forEach(function(tag){ %>
          <span class="label label-default"><%= tag %></span>
        <% }); %>
      </div>
    </div>
  </div>
<% }); %>
